{
  "meta": {
    "mimetype": "application/x-daoplayer-composition",
    "version": 1
  },
  "defaultScene": "scene1",
  "tracks": [
    {
      "name": "track1",
      "pauseIfSilent": false,
      "files": [
        { 
          "path": "meeting by the river snippet.mp3", 
          "trackPos": 0,
          "filePos": 0,
          "repeats": -1
        }
      ]
    }
  ],
  "scenes": [
    {
      "name": "scene1",
      "partial": false,
      "onany": "var now=new Date().getTime()",
      "onload": "console.log('onload!');window.loadTime=new Date().getTime()",
      "tracks": [
        {
          "name": "track1",
          "volume": "1-(now-window.loadTime)/20000",
          "pos": 0
        }
      ]
    },
    {
      "name": "full",
      "partial": false,
      "onany": "var ref={lat:52.953685,lng:-1.188429}",
      "tracks": [
        {
          "name": "track1",
          "volume": "window.position ? 1-window.distance(window.position.lat,window.position.lng,ref.lat,ref.lng) /1000: 0.5"
        }
      ]
    },
    {
      "name": "part",
      "partial": false,
      "tracks": [
        {
          "name": "track1",
          "volume": 0.4
        }
      ]
    },
    {
      "name": "zero",
      "partial": false,
      "tracks": [
        {
          "name": "track1",
          "volume": 0.0
        }
      ]
    }
  ]
}
